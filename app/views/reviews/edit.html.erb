<% if user_signed_in? %>
  <% if @review.user_id == current_user.id %>
  
      <h1>Edit Review</h1>

      <%= simple_form_for([@resturant, @review]) do |f| %>
        <div class="form-inputs">
          <%= f.input :comment %>
        </div>

        <div class="form-actions">
          <button type="button" class="btn btn-light"><%= f.button :submit %></button>
        </div>

      <% end %>

    <% end %>
<% end %>